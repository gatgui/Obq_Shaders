{
   "tool": "Obq_Shaders",
   "version": "3.16.0",
   "platforms": ["darwin", "linux", "windows"],
   "requires": ["arnold4.2.13.3+"],
   "environment":
   {
      "OBQ_ROOT": {"strict": True,
                   "abs": True,
                   "common": "@path/@tool/@version"},
      "ARNOLD_PLUGIN_PATH": "${OBQ_ROOT}/arnold/@platform"
   },
   "optional":
   {
      "MtoA":
      {
         "MTOA_TEMPLATES_PATH": "${OBQ_ROOT}/maya/ae",
         "MAYA_PRESET_PATH": "${OBQ_ROOT}/maya",
         "XBMLANGPATH": {"windows": "${OBQ_ROOT}/maya/icons",
                         "darwin": "${OBQ_ROOT}/maya/icons",
                         "linux": "${OBQ_ROOT}/maya/icons/%B"}
      }
   }
}